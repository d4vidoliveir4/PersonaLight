@using PersonaLight.HtmlHelperCustom
@using PersonaLight.Models
@model CadastroDadosMedicos
@{
    ViewBag.Titulo = "Saúde";
    ViewBag.Title = "Saúde";
}
@Html.MenuSistema((string)ViewBag.Titulo)
<div id="corpoPrincipal">       
    <div class="caixa">
        @using (Html.BeginForm("Salvar", "CadastroDadosMedicos", FormMethod.Post, new { id = "CadastroDadosMedicos" }))
        {
            <div class="formulario">
                @Html.BotaoSalvar(Model.Entidade.Id != 0)
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })           
                @Html.Partial("_MensagemErro",Model.Erro)
                 <div class="form-group">
                    @Html.Label("Data")
                    @Html.EditorFor(model => model.Entidade.Data, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.Entidade.Data, "", new { @class = "text-danger" })
                </div>      
                <div class="form-group">
                    @Html.Label("Peso")
                    @Html.EditorFor(model => model.Entidade.Peso, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Entidade.Peso, "", new { @class = "text-danger" })
                </div> 
                <div class="form-group">
                    @Html.Label("Temperatura")
                    @Html.EditorFor(model => model.Entidade.Temperatura, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Entidade.Temperatura, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Pressão")
                    @Html.EditorFor(model => model.Entidade.Pressao, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Entidade.Pressao, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Glicose")
                    @Html.EditorFor(model => model.Entidade.Glicose, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Entidade.Glicose, "", new { @class = "text-danger" })
                </div> 
                <div class="form-group">
                    @Html.Label("Como estou me sentindo")
                    @Html.EditorFor(model => model.Entidade.ComoMeSinto, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Entidade.ComoMeSinto, "", new { @class = "text-danger" })
                </div>           
                @Html.HiddenFor(m => m.Entidade.Id)
            </div>
        }
    </div>
</div>
@Html.Partial("_AcaoDeletar")